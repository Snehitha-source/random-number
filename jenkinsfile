pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                sh '''
                cd $WORKSPACE
                rm -rf *
                git clone https://github.com/Snehitha-source/${reponame}.git
                ls -lrt ${reponame}
                cd $WORKSPACE/$reponame
                echo 'Pull code from repo'
               '''
            }
        }
        stage('Build') {
            steps {
                echo 'Compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Run '
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy'
            }
        }
    }
}
